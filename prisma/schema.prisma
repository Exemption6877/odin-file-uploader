datasource db {
    provider = "postgresql"
    url=env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())
    username String @unique
    password String
    files Files[]
    folders Folders[]
}

model Files {
    id Int @id @default(autoincrement())
    name String
    type String
    path String
    userId Int
    creationDate DateTime
    user User @relation(fields: [userId], references: [id])
    folderId Int?
    folder Folders? @relation(fields: [folderId], references: [id])
    @@unique([userId, name])
}

model Folders {
    id Int @id @default(autoincrement())
    title String
    files Files[]
    userId Int
    user User @relation(fields: [userId], references: [id])
    @@unique([userId, title])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}